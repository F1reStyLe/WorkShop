MainWidget:

<MainWidget>:
    BoxLayout:
        size: root.size
        BoxLayout:
            spacing: 3
            padding: 10
            orientation: "vertical"
            GridLayout:
                spacing: 3
                padding: 10
                size_hint: (1, 0.3)
                cols: 3
                Button:
                    text: "Загрузить"
                    on_press: root.load_reactor()
                    disabled: not root.state
                Button:
                    text: "Слить"
                    on_press: root.unload_reactor()
                    disabled: not root.state
                Button:
                    text: "Инфо"
                    on_press: root.show_info()
                    disabled: not root.state
            GridLayout:
                spacing: 3
                padding: 10
                size_hint: (1, 0.7)
                cols: 4
                Button:
                    text: root.reactors[0].name
                    on_press: root.toggle_button(self)
                    disabled: root.state
                Button:
                    text: root.reactors[1].name
                    on_press: root.toggle_button(self)
                    disabled: root.state
                Button:
                    text: root.reactors[2].name
                    on_press: root.toggle_button(self)
                    disabled: root.state
                Button:
                    text: root.reactors[3].name
                    on_press: root.toggle_button(self)
                    disabled: root.state
                Button:
                    text: root.reactors[4].name
                    on_press: root.toggle_button(self)
                    disabled: root.state
                Button:
                    text: root.reactors[5].name
                    on_press: root.toggle_button(self)
                    disabled: root.state
                Button:
                    text: root.reactors[6].name
                    on_press: root.toggle_button(self)
                    disabled: root.state
                Button:
                    text: root.reactors[7].name
                    on_press: root.toggle_button(self)
                    disabled: root.state

        BoxLayout:
            spacing: 3
            padding: 10
            orientation: 'vertical'
            Spinner:
                id: spinner
                size: self.size
                text: "Production"
                values: root.production_dict['name']
                on_text: root.spinner_clicked(self)
                disabled: not root.state
            Label:
            Label:
                id: label_text
                text: ''

